                    </div>
                </div>
                <div class="row">
                    <div style="border-bottom:4px solid lightskyblue;border-left:4px solid lightskyblue;border-right:4px solid lightskyblue;" class="col-12">
                        <br />
                        <table class="table">
                            <thead class="thead-dark">
                                <tr style="text-align:center">
                                    <th scope="col">#</th>
                                    <th scope="col">CÉDULA</th>
                                    <th scope="col">CLIENTE</th>
                                    <th scope="col">CHOFER</th>
                                    <th scope="col">PLACA</th>
                                    <th scope="col">HUMEDAD</th>
                                    <th scope="col">IMPUREZA</th>
                                    <th scope="col">PESO</th>
                                    <th scope="col">PRECIO</th>
                                    <th scope="col">TOTAL</th>
                                    <th scope="col">FECHA</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                    foreach (var item in ViewBag.Datos)
                                    {
                                        <tr style="text-align:center;vertical-align:middle">
                                            <td>@counter</td>
                                            <td style="vertical-align:middle">@item._PersonaCliente.NumeroDocumento</td>
                                            <td style="vertical-align:middle">
                                                @item._PersonaCliente.PrimerNombre
                                                @*@item._PersonaChofer.SegundoNombre*@
                                                @item._PersonaCliente.ApellidoPaterno
                                                @*@item._PersonaChofer.ApellidoMaterno*@
                                            </td>
                                            @if (item._TipoPresentacionRubro.Identificador == 1)
                                            {
                                                if (item._PersonaChofer != null)
                                                {
                                                    <td style="vertical-align:middle">
                                                        @item._PersonaChofer.PrimerNombre
                                                        @*@item._PersonaChofer.SegundoNombre*@
                                                        @item._PersonaChofer.ApellidoPaterno
